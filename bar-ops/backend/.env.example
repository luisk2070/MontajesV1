# Copia este archivo a .env y completa los valores
# ============================================
# CONFIGURACIÓN BÁSICA
# ============================================
PORT=10000
DATABASE_URL=postgresql://usuario:password@localhost:5432/bar_ops
FRONTEND_URL=http://localhost:5173

# ============================================
# TIEMPOS DE MONTAJE (minutos)
# ============================================
# Tiempo base de llenado de stock
STOCK_MINUTES=10

# Minutos por unión entre módulos
UNION_MINUTES=5

# Número fijo de esquineros por diseño base
CORNER_COUNT=2

# Minutos base para módulo estándar (fallback si no hay BD)
MODULE_BASE_FALLBACK=12

# Minutos base para esquinero (fallback si no hay BD)
CORNER_BASE_FALLBACK=8

# ============================================
# COSTES DE PERSONAL
# ============================================
# Tarifa en € por hora para personal ETT (agencia)
ETT_RATE=18

# Umbral de horas para la recomendación de personal
FOUR_HOURS_THRESHOLD=4

# ============================================
# OPTIMIZACIÓN DE STAFF
# ============================================
# Mínimo de personal a considerar
MIN_STAFF=1

# Máximo de personal a considerar en el cálculo
MAX_STAFF=20

# Factor de eficiencia al añadir más personal (0-1)
# Representa la pérdida de eficiencia por coordinación
# 0.85 = 15% de pérdida de eficiencia por cada persona adicional
EFFICIENCY_FACTOR=0.85
